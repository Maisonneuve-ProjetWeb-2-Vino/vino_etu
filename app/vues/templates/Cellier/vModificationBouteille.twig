<div class="modifier">

    <div class="modificationBouteille" vertical layout>
        Recherche : <input type="text" name="nom_bouteille">
        <ul class="listeAutoComplete">

        </ul>
            <div >
                <p>Nom : <span data-id="{{ bouteille.id_bouteille }}" class="nom_bouteille">{{ bouteille.nom }}</span></p>
                <p>Millesime : <input type="text" name="millesime" value="{{ bouteille.millesime }}"><span class="erreur_champ erreur_millesime"></span></p>
                <p>Quantite : <input type="text" name="quantite" value="{{ bouteille.quantite }}"><span class="erreur_champ erreur_quantite"></span></p>
                <p>Date achat : <input type="date" name="date_achat" value="{{ bouteille.date_achat}}"><span class="erreur_champ erreur_date_achat"></span></p>
                <p>Prix : <input type="text" name="prix" value="{{bouteille.prix }}"><span class="erreur_champ erreur_prix"></span></p>
                <p>Garde : <input name="garde_jusqua" value="{{ bouteille.garde_jusqua }}"></p>
                <p>Notes <input name="notes" value="{{ bouteille.notes }}"></p>
                <input id="bouteille_id" type="hidden" data-id-cellier="{{ bouteille.id }}">
            </div>
            <button name="modifierBouteilleCellier">Modifier la bouteille</button>
            <li><a href="accueil">Annuler</a></li>
        </div>
    </div>
</div>
