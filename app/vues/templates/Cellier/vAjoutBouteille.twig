<div class="cellier contenu">
    <div class="conteneur_celliers">

<div class="ajouter">

    <div class="nouvelleBouteille" vertical layout>
        <select class="form_connexion_input" id="cellier_id" name="cellier" aria-label="Nom de cellier">
        {% for cellier in celliers %}
            <option value="{{ cellier.id }}" {% if cellier.id == cellier_preferentiel %} selected {% endif %}>{{ cellier.nom }}</option>
        {% endfor %}
        </select>
        <input class="form_connexion_input" type="text" name="nom_bouteille" placeholder="Recherche" aria-label="Recherche">
        <button  class="bouton_supprimer_cellier" name="entrerBouteillePersonnalisee">Entrer une bouteille personnalisée</button>
        

        <ul class="listeAutoComplete">

        </ul>
        <div class="conteneur_details conteneur_details_cache">
            <div >
                <input class="form_connexion_input nom_bouteille" data-id="" name="nom" value="{{ bouteille.nom }}" placeholder="Nom" aria-label="Nom">
<span class="error">
    <span class="erreur_champ erreur_nom_bouteille">{{ erreurs.nom }}</span>
</span>

<input class="form_connexion_input" name="quantite" value="1" placeholder="Quantité" aria-label="Quantité">
<span class="error">
    <span class="erreur_champ erreur_quantite">{{ erreurs.quantite }}</span>
</span>

<select class="form_connexion_input" id="pays_id" name="pays" aria-label="Pays">
    {% for unPays in pays %}
    <option value="{{ unPays.id }}">{{ unPays.pays }}</option>
    {% endfor %}
</select>

<select class="form_connexion_input" id="type_id" name="type" aria-label="Type">
    {% for type in types %}
    <option value="{{ type.type }}">{{ type.type }}</option>
    {% endfor %}
</select>

<input class="form_connexion_input" name="millesime" value="{{ bouteille.millesime }}" placeholder="Millésime" aria-label="Millésime">

<input class="form_connexion_input" name="pastille" value="{{ bouteille.pastille }}" disabled placeholder="Pastille SAQ" aria-label="Pastille SAQ">

<input class="form_connexion_input" name="appellation" value="{{ bouteille.appellation }}" placeholder="Appellation" aria-label="Appellation">

<input class="form_connexion_input" name="format" value="{{ bouteille.format }}" placeholder="Format" aria-label="Format">

<input class="form_connexion_input" name="cepage" value="{{ bouteille.cepage }}" placeholder="Cépage(s)" aria-label="Cépage(s)">

<input class="form_connexion_input" name="particularite" value="{{ bouteille.particularite }}" placeholder="Particularité" aria-label="Particularité">

<input class="form_connexion_input" name="degreAlcool" value="{{ bouteille.degreAlcool }}" placeholder="Degré d'alcool" aria-label="Degré d'alcool">

<input class="form_connexion_input" name="origine" value="{{ bouteille.origine }}" placeholder="Origine" aria-label="Origine">

<input class="form_connexion_input" name="producteur" value="{{ bouteille.producteur }}" placeholder="Producteur" aria-label="Producteur">

<input class="form_connexion_input" name="prix" value="{{ bouteille.prix_saq }}" placeholder="Prix" aria-label="Prix">

<input class="form_connexion_input" name="region" value="{{ bouteille.region }}" placeholder="Région" aria-label="Région">

<input class="form_connexion_input" name="sucre" value="{{ bouteille.sucre }}" placeholder="Taux de sucre" aria-label="Taux de sucre">

<input id="cellier_id" type="hidden" value="{{ cellier_id }}">

<button  class="bouton_supprimer_cellier"  name="ajouterBouteilleCellier">Ajouter la bouteille</button>
        </div>
        </div>
    </div>
</div>
</div>
</div>