<div class="cellier">

    <a href="cellier?action=l&cellier_id={{ bouteille.id_cellier }}">Retour au cellier</a>
    <br>
    <h1>Fiche détaillée</h1>

    <div>
        <div >
            <img class="img_bouteille" src="{{ bouteille.image_url }}">
        </div>
        <div class="description">
            <p class="nom">Nom : {{ bouteille.nom }}</p>
            <p class="quantite">Quantité :<span>{{ bouteille.quantite }}</span></p>
            <p class="pays">Pays : {{ bouteille.pays }}</p>
            <p class="type">Type : {{ bouteille.type }}</p>
            <p class="format">Format : {{ bouteille.format }}</p>
        </div>
        <details>
            <p>Cépage(s) : {{ bouteille.cepage }}</p>
            <p>Degré d'alcool : {{ bouteille.degreAlcool }}</p>
            <p>Producteur : {{ bouteille.producteur }}</p>
            <p>Prix : {{ bouteille.prix_saq }}</p>
            <p>Région : {{ bouteille.region }}</p>
            <p>Taux de sucre : {{ bouteille.sucre }}</p>
            <br>
            <p>{{ bouteille.pastille }}</p>
        </details>

    </div>

    <button class="btnModifier" data-id="{{ bouteille.id_bouteille_cellier }}">Modifier la bouteille</button>
    <br>
    <button class="confirmer" data-href="cellier?action=t&bouteille_id={{ bouteille.id_bouteille_cellier }}">Supprimer la bouteille</button>
</div>

{{ include("/Cellier/modaleSuppression.twig") }}