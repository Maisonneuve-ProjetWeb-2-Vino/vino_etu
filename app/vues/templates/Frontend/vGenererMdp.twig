	<section>
{% if message != "" %}
	<div class="error">
		<span>{{ message }}</span>
	</div>
{% endif %}

		<form class="form_modification_membre" method="POST" action="">

			<div class="form_champ_modification">
				<label for="mdpProvisoire">Mot de passe provisoire :</label>
				<input id="mdpProvisoire" type="text" class="form_modification_membre_input" name="mdpProvisoire" value="" placeholder="Votre mot de passe actuel">

				{% if erreurs.mdpProvisoire != "" %}
					<div class="error">
						<span>{{ erreurs.mdpProvisoire }}</span>
					</div>
				{% endif %}

			</div>

			<div class="form_champ_modification">
				<label for="mdp">Votre nouveau mot de passe :</label>
				<input id="mdp" class="form_modification_membre_input" name="mdp" value="" type="password" placeholder="Votre nouveau mot de passe">
				{% if erreurs.mdp != "" %}

					<div class="error">
						<span>{{ erreurs.mdp }}</span>
					</div>
				{% endif %}
			</div>


			<div class="form_champ_modification">
				<label for="renouvelermdp">Confirmez votre nouveau mot de passe :</label>
				<input id="renouvelermdp" class="form_modification_membre_input" name="renouvelermdp" type="password" value="" placeholder="Confirmez votre mot de passe">
				{% if erreurs.renouvelermdp != "" %}
					<div class="error">
						<span>{{ erreurs.renouvelermdp }}</span>
					</div>
				{% endif %}
			</div>


			<input type="hidden" name="idprofil" value="membre">
			<input type="hidden" name="courriel" value="{{oUtilConn.courriel }}">

			<input class="btn_action" type="submit" value="Envoyer">

		</form>
	</section>

<!-- fin template générer mot de passe -->
